@model orgClient.Models.PositionModel
@{
    ViewBag.Title = "PersonInfo";
}
<div class="container">
    <img src="@(Model.position.PersonData!=null && Model.position.PersonData.SEX.Equals("M") ? "/Content/img_avatar.png" : "/Content/img_avatar2.png")" style="width: 150px;height: 150px;" class="pull-left img-thumbnail" alt="Cinque Terre"> 
    <span>  </span>
    <h2 style="margin-left:15%"> @(Model.position.PersonData != null ? Model.position.PersonData.FIRST_NAME + " " + Model.position.PersonData.LAST_NAME : "Вакансия" )</h2>
    <p style="margin-left:15%"> @Model.position.POSITIONNAME</p>
    <p style="margin-left:15%"> @(Model.position.PersonData !=null ? Model.position.PersonData.REGION: " ")</p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Основное назначение</th>
                <th>Функциональное назначение</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Тест</td>
                <td>Head Name <button onclick="changeHead(@(Model.position.PersonData !=null ? Model.position.PersonData.PERSONID.ToString(): " "))" class="btn btn-light"> Изменить</button></td>
            </tr>
        </tbody>
    </table>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Непосредственный руководитель</th>
                <th>Функциональный руководитель</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><a href="" onclick="modalclick(@(Model.parentPosition != null ? Model.parentPosition.POSITIONID + "," + Model.parentPosition.parentPositionID:"0,0"))">@(Model.parentPosition != null ? Model.parentPosition.PersonData.FIRST_NAME + " " + Model.parentPosition.PersonData.LAST_NAME : "нет" )</a></td>
                <td>Тест</td>
            </tr>
        </tbody>
    </table>
    <p>Компания:тест </p>

    <h2 style="text-align:center">Личная карточка</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Телефоны/факс</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Внутренний</td>
                <td>123456789</td>
                <td>Мобильный служебный</td>
                <td>123456789</td>
            </tr>
            <tr>
                <td>Городской(корп.)</td>
                <td>123456789</td>
                <td>Городской(для клиентов)</td>
                <td>123456789</td>
            </tr>
        </tbody>
    </table>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Остальные данные</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>E-mail</td>
                <td>test@beeline.kz</td>
                <td>Контактное лицо</td>
                <td>тест</td>
            </tr>
            <tr>
                <td>Почтовый адрес офиса</td>
                <td>@(Model.position.PersonData != null? Model.position.PersonData.REGION:" ")</td>
                <td>Местоположение</td>
                <td>@(Model.position.PersonData != null ? Model.position.PersonData.PLACE_OF_RESIDENCE : " ")</td>
            </tr>
            <tr>
                <td>Альтернативный способ связи</td>
                <td>нет</td>
                <td>Автомобиль</td>
                <td>нет</td>
            </tr>
        </tbody>
    </table>
    <!-- The Modal -->
    <div id="myModal" class="modalw">
        <!-- Modal content -->
        <div class="modalcontent">
            <div class="modalheader">
                <span onclick="clearWindow()" class="close">&times;</span>
                    <h3>Поиск</h3>
            </div>
            <div class="modalbody">
                <form class="form-inline modal-search">
                    <div class="input-group">
                        <input class="form-control" type="text" id="searchtext" placeholder="Введите для поиска">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="button" onclick="Search()">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </form>
               
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Фамилия</th>
                            <th>Имя</th>
                            <th>Должность</th>
                        </tr>
                    </thead>
                    <tbody id="searchresult">
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
